.content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgb(255, 255, 255);
    font-family: "Microsoft YaHei";
    overflow-x: hidden;
}
.layout-top{
    width: 100%;
    margin-bottom: 5rpx;
    height: 15%;
    
}
.layout-bottom{
    width: 100%;
    height: 85%;
}
.screen {
    text-align: right;
    width: 100%;
    line-height: 150rpx;
    padding: 0 10rpx;
    font-weight: bold;
    font-size: 70px;
    box-sizing: border-box;
    border-top: 1px solid #fff;
}
.screen2 {
    text-align: right;
    width: 100%;
    line-height:70rpx;
    padding: 0 10rpx;
    font-size: 40px;
    font-weight: bold;
    box-sizing: border-box;
    border-top: 2px solid #fff;
}
.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 4.1rem;
    background-color: #fff;
}
.btnGroup2 {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 3.8rem;
    background-color: #fff;
}
.item {
    width:25%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin:4px
}
.item2 {
    width:20%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin: 2px;
}
.item:active {
    background-color: #ff0000;
}
.zero{
    width: 50%;
}
.orange {
    color: #fef4e9;
    background: #f75b1d;
    font-weight: bold;
}
.buttonColor{
    color: #fef4e9;
    background: #c5c3c3;
    font-weight: bold;
}
.blue {
    color:#0a0a0a;
    background-color: #dce8ec;
}
.iconBtn{
    display: flex;
}
.icon{
   display: flex;
   align-items: center;
   width:100%;
   justify-content: center;
}
.ui-share-hover{
  opacity: 0.9;
  transform: scale(0.95,0.95);
}
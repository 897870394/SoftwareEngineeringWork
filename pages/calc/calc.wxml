<view class="content">

  <view class="layout-top">
    <view class="screen2">{{screenData2}}</view>
    <view class="screen">{{screenData}}</view>
  </view>
   
  <view class="layout-bottom">
    <view class="btnGroup">
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{ida}}">x!</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idxn}}">x^n</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idgen}}">√</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idxs}}">x²</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{id_e}}">e</view>
    </view>
    <view class="btnGroup">
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idsin}}">sin</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idcos}}">cos</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idtan}}">tan</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idln}}">ln</view>
      <view class="item2 buttonColor" bindtap="clickBtn" id="{{idlg}}">log</view>
    </view>


    <view class="btnGroup">
      <view class="item buttonColor" bindtap="clickBtn" id="{{idc}}">С</view>
      <view class="item buttonColor" bindtap="clickBtn" id="{{idb}}">←</view>
      <view class="item buttonColor iconBtn" bindtap="history">
        <icon type="{{iconType}}" color="{{iconColor}}" class="icon" size="25"/>
      </view>
      <view class="item buttonColor" bindtap="clickBtn" id="{{idx}}">×</view>
    </view>
    <view class="btnGroup">
      <view class="item blue" bindtap="clickBtn" id="{{id9}}">9</view>
      <view class="item blue" bindtap="clickBtn" id="{{id8}}">8</view>
      <view class="item blue" bindtap="clickBtn" id="{{id7}}">7</view>
      <view class="item buttonColor" bindtap="clickBtn" id="{{iddiv}}">÷</view>
    </view>
    <view class="btnGroup">
      <view class="item blue" bindtap="clickBtn" id="{{id6}}">6</view>
      <view class="item blue" bindtap="clickBtn" id="{{id5}}">5</view>
      <view class="item blue" bindtap="clickBtn" id="{{id4}}">4</view>
      <view class="item buttonColor" bindtap="clickBtn" id="{{idadd}}">＋</view>
    
    </view>
    <view class="btnGroup">
      <view class="item blue" bindtap="clickBtn" id="{{id3}}">3</view>
      <view class="item blue" bindtap="clickBtn" id="{{id2}}">2</view>
      <view class="item blue" bindtap="clickBtn" id="{{id1}}">1</view>
      <view class="item buttonColor" bindtap="clickBtn" id="{{idj}}">－</view>
    </view>
    <view class="btnGroup">
      <view class="item blue" bindtap="clickBtn" id="{{idbfh}}">%</view>
      <view class="item blue" bindtap="clickBtn" id="{{id0}}">0</view>
      <view class="item blue" bindtap="clickBtn" id="{{idd}}">.</view>
      <view class="item buttonColor2" hover-class='ui-share-hover' hover-stay-time="100" bindtap="clickBtn" id="{{ide}}">＝</view>
    </view>
  </view>
</view>
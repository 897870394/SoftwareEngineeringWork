.content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgb(255, 255, 255);
    font-family: "Microsoft YaHei";
    overflow-x: hidden;
}
.layout-top{
    width: 100%;
    margin-bottom: 20rpx;
}
.layout-bottom{
    width: 100%;
}
.screen {
    text-align: right;
    width: 100%;
    line-height: 200rpx;
    padding: 0 10rpx;
    font-weight: bold;
    font-size: 70px;
    box-sizing: border-box;
    border-top: 1px solid #fff;
}
.screen2 {
    text-align: right;
    width: 100%;
    line-height:70rpx;
    padding: 0 10rpx;
    font-size: 40px;
    font-weight: bold;
    box-sizing: border-box;
    border-top: 2px solid #fff;
}
.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 4.1rem;
    background-color: #fff;
}
.item {
    width:20%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: 1px;
    margin-right: 1px;
}
.item:active {
    background-color: #ff0000;
}
.zero{
    width: 50%;
}
.orange {
    color: #fef4e9;
    background: #f75b1d;
    font-weight: bold;
}
.blue {
    color:#d9eef7;
    background-color: #0095cd;
}
.iconBtn{
    display: flex;
}
.icon{
   display: flex;
   align-items: center;
   width:100%;
   justify-content: center;
}
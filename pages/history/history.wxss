.content{
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background-color: #fff;
    padding: 0 5rpx;
}
.item{
    width: 95%;
    line-height: 100rpx;
    margin-top: 3rpx;
    margin-bottom: 3rpx;
    border-radius: 3px;
    padding-left: 3rpx;
    color: #fef4e9;
    border: 1px solid #01c2e4;
    background: #04C1C3;
}
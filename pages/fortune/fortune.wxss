  flex-direction: column;
  align-items: center;
  background-color: rgb(255, 255, 255);
  font-family: "Microsoft YaHei";
  overflow-x: hidden;
}
.layout-top{
  width: 100%;
  margin-bottom: 5rpx;
    
}
.layout-bottom{
